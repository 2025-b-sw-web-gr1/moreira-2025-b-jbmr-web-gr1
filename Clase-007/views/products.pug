extends layout

block content
  h1 Productos

  form.filters(action="/productos", method="get")
    input(type="text", name="q", placeholder="Buscar productos...", value=q)
    select(name="category")
      option(value="") Todas las categor√≠as
      each c in categories
        option(value=c, selected=(activeCategory===c))= c
    button.btn.primary(type="submit") Filtrar
    a.btn.outline(href="/productos") Limpiar

  if products.length === 0
    p No se encontraron productos con esos filtros.
  else
    .grid
      each product in products
        include partials/product-card.pug
